JGB_BUILD_CONFIGURE_OPTIONS_HOST=no
JGB_BUILD_CONFIGURE_OPTIONS="--sysconfdir=$JGB_BUILD_DESTDIR --chronyrundir=$JGB_BUILD_DESTDIR --localstatedir=$JGB_BUILD_DESTDIR"
if [ "$JGB_BUILD_BUILD_ARCH" != $JGB_BUILD_HOST_ARCH ] ; then
  export CC=${JGB_BUILD_CONFIG_HOST[${JGB_BUILD_BUILD_ARCH}-${JGB_BUILD_HOST_ARCH}]}-gcc
fi
